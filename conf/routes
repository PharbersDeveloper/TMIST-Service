# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                               controllers.TmistController.index()
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
# 文件上传
#POST   /api/file/upload                controllers.upload.FopController.uploadFile

# 权限设置
POST    /api/role/push                  controllers.RoleController.pushRole()
POST    /api/role/pop                   controllers.RoleController.popRole()
#很多验证和失败回滚问题
POST    /api/role/update                controllers.RoleController.updateRole()
POST    /api/role/query                 controllers.RoleController.queryRole()
POST    /api/role/query/multi           controllers.RoleController.queryMultiRole()
POST    /api/role/query/users           controllers.RoleController.queryUsersByRole()

# 公司设置
POST    /api/company/push               controllers.CompanyController.pushCompany()
POST    /api/company/pop                controllers.CompanyController.popCompany()
#很多验证和失败回滚问题
POST    /api/company/update             controllers.CompanyController.updateCompany()
POST    /api/company/query              controllers.CompanyController.queryCompany()
POST    /api/company/query/users        controllers.CompanyController.queryUsersByCompany()

# 用户设置
POST    /api/user/detail                controllers.UserController.userDetail()
POST    /api/user/login                 controllers.UserController.userLogin()

# 关卡设置
POST    /api/proposal/push              controllers.ProposalController.pushProposal()
POST    /api/proposal/pop               controllers.ProposalController.popProposal()
POST    /api/proposal/update            controllers.ProposalController.updateProposal()
POST    /api/proposal/query             controllers.ProposalController.queryProposal()
POST    /api/proposal/lst               controllers.ProposalController.queryProposalLst()

# 关卡内场景信息
POST    /api/proposal/hospital/lst      controllers.ProposalController.queryHospLst()
POST    /api/proposal/budget/info       controllers.ProposalController.queryBudgetInfo()
POST    /api/proposal/humans/info       controllers.ProposalController.queryHumansInfo()
POST    /api/proposal/hospital/detail   controllers.ProposalController.queryHospDetail()

# 生成报告信息
POST    /api/report/total               controllers.ReportController.queryTotalReport()
POST    /api/report/dests_goods         controllers.ReportController.queryDestsGoodsReport()
POST    /api/report/resos_goods         controllers.ReportController.queryResosGoodsReport()
POST    /api/report/resos_io            controllers.ReportController.queryResosIO()
POST    /api/report/rep_ind_resos       controllers.ReportController.queryRepIndResos()
